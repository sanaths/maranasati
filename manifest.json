{
    "name": "Daily Death",
    "description": "Add a tiny god of death to your browser window to remind you that the clock is ticking.",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
      },
    "permissions": ["storage", "activeTab", "scripting"],
      
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./icon.png",
            "32": "./icon.png",
            "48": "./icon.png",
            "128": "./icon.png"
          }
      },
      "icons": {
        "16": "./icon.png",
        "32": "./icon.png",
        "48": "./icon.png",
        "128": "./icon.png"
      }      
} 
  